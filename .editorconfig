# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# For most files
[*]
indent_size = 2
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Makefile needs tabs
[{Makefile}]
indent_style = tab
indent_size = 4
